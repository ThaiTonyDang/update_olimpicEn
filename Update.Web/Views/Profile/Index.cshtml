@using UpdateWeb.Domain.ViewModels;
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}
@model UserItemViewModel;
@{
    var user = Model;
    var loailop = user.Class;
    var area = user.Area;
}
<link href="~/css/profile.css" rel="stylesheet" />
<div class="container light-style flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-4">
        Account settingsemail
    </h4>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Area" class="areaId" type="hidden"/>
        <input asp-for="City" class="cityId" type="hidden" />
        <input asp-for="District" class="districtId" type="hidden" />
        <input asp-for="School" class="schoolId" type="hidden" />
        <input asp-for="UserName" class="userName" type="hidden" />
        <input asp-for="PhoneNumber" class="phoneNumber" type="hidden" />
        <input asp-for="Email" class="email" type="hidden" />
        <input asp-for="FullName" class="fullname" type="hidden" />
        <input asp-for="Khoa" class="khoa" type="hidden" />
        <input asp-for="Lop" class="lop" type="hidden" />
        <input asp-for="Class" class="class" type="hidden" />
        <input asp-for="Id" class="userId" type="hidden" />

        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group list-group-flush account-settings-links">
                        <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-general">Thông Tin Chung</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-change-password">Đổi Mật Khẩu</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-notifications">Thông Báo</a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Số Điện Thoại</label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserName" type="text" class="form-control" id="inputPhone" placeholder="Số Điện Thoại">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input asp-for= "Email" type="text" class="form-control" id="inputEmail" placeholder="Email">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Họ Và Tên</label>
                                    <div class="col-sm-10">
                                        <input asp-for = "FullName" type="text" class="form-control" id="inputName" placeholder="Họ Và Tên">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Bảng Thi</label>
                                    <div class="col-sm-10">
                                        <select asp-for="Class" class="form-select" aria-label="Default select example" id="bangthi">
                                            <option value="HS">Học Sinh</option>
                                            <option value="SV">Sinh Viên</option>
                                        </select>
                                    </div>
                                    <p class="class-error-message" style="color:red"></p>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Khu Vực</label>
                                    <div class="col-sm-10">
                                        <select asp-for="Area" class="form-select" aria-label="Default select example" id="area">
                                            <option value="1">Miền Bắc</option>
                                            <option value="2">Miền Trung</option>
                                            <option value="3">Miền Nam</option>
                                            <option value="4">Cụm Đoàn Trực Thuộc Trung Ương</option>
                                        </select>
                                    </div>
                                    <p class="area-error-message" style="color:red"></p>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="City" class="col-sm-2 col-form-label">Thành Phố</label>
                                    <div class="col-sm-10">
                                        <select asp-for="City" class="form-select" aria-label="Default select example" id="city">
                                            <option value="-1">--- Chọn Tỉnh/Thành Phố/Khu Vực ---</option>
                                        </select>
                                    </div>
                                    <p class="error city-error-message" style="color:red"></p>
                                </div>
                                <div class="form-group row district_block">
                                    <label asp-for="District" class="col-sm-2 col-form-label">Quận Huyện</label>
                                    <div class="col-sm-10">
                                        <select asp-for="District" class="form-select"
                                                aria-label="Default select example" id="district">
                                            @if(Model.Class == "HS")
                                            {
                                                <option value="-1">---Chọn Quận/Huyện---</option>
                                            }
                                            else
                                            {
                                                <option value="-1"></option>
                                            }

                                        </select>
                                    </div>
                                    <p class="error district-error-message" style="color:red"></p>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="School" class="col-sm-2 col-form-label">Trường</label>
                                    <div class="col-sm-10">
                                        <select class="form-select" aria-label="Default select example" id="school">
                                            <option value="-1">---Chọn Trường---</option>
                                        </select>
                                    </div>
                                    <p class="error school-error-message" style="color:red"></p>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Khoa</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputKhoa" placeholder="Khoa">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword" class="col-sm-2 col-form-label">Tên Lớp</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="inputLop" placeholder="Lớp">
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary confirm-update" style="cursor:pointer">Xác Nhận</button>

                                <a href="/" class="btn btn-default" style="font-size:1.5rem">Cancel</a>
                                
                            </div>

                        </div>
                        <div class="tab-pane fade" id="account-change-password">
                            <div class="card-body pb-2">

                                <div class="form-group">
                                    <label class="form-label">Current password</label>
                                    <input asp-for="PasswordItem.CurrentPassword" type="password" class="form-control">
                                    <span asp-validation-for="@Model.PasswordItem.CurrentPassword"></span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">New password</label>
                                    <input asp-for="PasswordItem.NewPassword" type="password" class="form-control">
                                    <span asp-validation-for="@Model.PasswordItem.NewPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Repeat new password</label>
                                    <input asp-for="PasswordItem.ConfirmPassword" type="password" class="form-control">
                                    <span asp-validation-for="@Model.PasswordItem.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-right mt-3">
                                    <button formaction="@Url.ActionLink("ChangePassword", "Users")"
                                        formmethod="post"
                                        class="btn btn-primary button-save" style="color:white;">
                                        Lưu thay đổi
                                    </button>&nbsp;
                                    <a href="/" class="btn btn-default" style="font-size:1.5rem">Cancel</a>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-notifications">
                            <div class="container mt-5 mb-5">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-md-8">
                                        <div class="card">

                                            <div class="text-left logo p-2 px-5">
                                                <i class="bi bi-credit-card-2-back-fill" style="font-weight:600; font-size:40px;color:rgb(224, 95, 104)"></i>
                                            </div>
                                            <div class="invoice p-5">
                                                <span class="font-weight-bold d-block mt-4">Hello, Customer </span>
                                                <p class="font-weight-bold mb-0">Kiểm Tra Email của bạn để biết thông tin chi tiết</p>
                                                <p class="font-weight-bold mb-0">Cám ơn vì đồng hành cùng Ames</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts
    {
    <script src="~/js/loaddata.js"></script>
}